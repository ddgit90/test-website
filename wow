 // 1. 。スムーズスクロール
 const lenis = new Lenis({
 期間: 1。2,
 緩和:（t）=> Math。min(1, 1。001 - Math。pow(2, 、 -10 * t）)、
 スムーズ: 本当、
 });
        関数 raf（時間）{
 lenis。raf（時間）;
 リクエストアニメーションフレーム（raf）;
        }
 リクエストアニメーションフレーム（raf）;

 // 2. 。GSAP
 gsap。registerPlugin（ScrollTrigger）;

 // ヒーロー公開
 gsap。from(". 。text-reveal", 、 {
 y: 100, 、 不透明度: 0, 、 期間: 1。5, 、 容易: "パワー4。アウト, 、 遅延: 0。2
 });

 // 記事フェードイン
 gsap。utils。toArray('記事')。forEach（記事 => {
 gsap。from（記事、 {
 スクロールトリガー: {
 トリガー: 記事、
 開始: "トップ85%」,
 },
 y: 30, 、 不透明度: 0, 、 期間: 1, 、 容易: "power2。out"
 });
 });

 // 3. 。カーソル
 const カーソル = document。querySelector(". 。カーソル");
 const hoverables = document。querySelectorAll(". 。ホバリング可能");

 window。addEventListener("マウスの動き」,（e）=> {
 gsap。to（カーソル、 {
 x: e。clientX - 10,
 y: e。clientY - 10,
 期間: 0。1,
 容易に: "power2。out"
 });
 });

 hoverables。forEach（el => {
 el。addEventListener("マウスエンター", () => document。body。classList。add("ホバリング中」));
 el。addEventListener("マウスリーブ」, () => ドキュメント。body。classList。remove("ホバリング中」));
 });
 </スクリプト>
